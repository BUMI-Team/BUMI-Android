<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_date"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_calendar_month_24"
            card_view:tint="@color/cyan_900" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_date"
            card_view:layout_constraintStart_toEndOf="@+id/iv_date"
            card_view:layout_constraintTop_toTopOf="@+id/iv_date"
            tools:text="Rabu, 26 Mei 2022" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_date"
            tools:src="@drawable/ic_baseline_access_time_24"
            card_view:tint="@color/cyan_900"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_time"
            card_view:layout_constraintStart_toEndOf="@+id/iv_time"
            card_view:layout_constraintTop_toTopOf="@+id/iv_time"
            tools:text="19.30 - 19.45" />

        <ImageView
            android:id="@+id/iv_trainer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_time"
            tools:src="@drawable/ic_baseline_person_24"
            card_view:tint="@color/cyan_900"/>

        <TextView
            android:id="@+id/tv_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_trainer"
            card_view:layout_constraintStart_toEndOf="@+id/iv_trainer"
            card_view:layout_constraintTop_toTopOf="@+id/iv_trainer"
            tools:text="Trainer: Muriel Makarim" />


        <ImageView
            android:id="@+id/iv_link"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_trainer"
            tools:src="@drawable/ic_baseline_link_24"
            card_view:tint="@color/cyan_900"/>

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_link"
            card_view:layout_constraintStart_toEndOf="@+id/iv_link"
            card_view:layout_constraintTop_toTopOf="@+id/iv_link"
            tools:text="https://meet.google.com/act-nmyj-dzq" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>