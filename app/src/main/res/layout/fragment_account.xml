<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/account_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/cyan_500"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/noavatar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:padding="20dp">

            <Button
                android:id="@+id/btn_edit_profil"
                android:alpha="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/bluecyan_700"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Edit Profil Akun"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_consultation_agenda"
                android:alpha="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/bluecyan_700"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Agenda Konsultasi"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white"
                android:hint="Nama Lengkap">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvNameAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/black"
                    android:enabled="false"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white"
                android:hint="E-Mail">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvEmailAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/black"
                    android:enabled="false"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_jenis_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white"
                android:hint="Jenis Usaha">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_jenis_usaha_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_storefront_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/black"
                    android:enabled="false"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_kategori_acc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white"
                android:hint="Kategori Usaha">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kategori_usaha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_category_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/black"
                    android:enabled="false"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="20dp">

            <Button
                android:id="@+id/btn_logout"
                android:alpha="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Logout"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>